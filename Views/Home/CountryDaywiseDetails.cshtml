@{
    ViewData["Title"] = "Country Day-wise Details";
    var CountryData = ViewBag.CountryData;
    var Country = ViewBag.Country;
    int counter = 0;
}

<div class="text-center">
    <h1 class="display-4">COVID-19: @Country</h1>

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <table class="table table-hover" id="dayWiseData">
                    <thead>
                        <tr>
                            <th>
                                Date
                            </th>
                            <th>
                                Confirmed
                            </th>
                            <th>
                                Deaths
                            </th>
                            <th>
                                Recovered
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (EventModel entry in CountryData[0])
                        {
                            <tr class="@(@counter%2 == 0 ? "" : "table-active")">
                                <td>
                                    @entry.Date.ToString("dd/MM/yyyy")
                                </td>
                                <td>
                                    @entry.Confirmed
                                </td>
                                <td>
                                    @entry.Deaths
                                </td>
                                <td>
                                    @entry.Recovered
                                </td>
                            </tr>
                            counter++;
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript">
        $(document).ready( function () {
            $('#dayWiseData').DataTable({
                "bSort" : false
            });
        });
    </script>
}

